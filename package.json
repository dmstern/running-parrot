{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "prod": "npm run build",
    "postinstall": "node ./node_modules/husky/lib/installer/bin install",
    "deploy": "git push origin `git subtree split --prefix public main`:gh-pages --force"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prod"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "husky": "^5.1.3",
    "node-sass": "^5.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.32.8",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.6.9"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
